<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunny"
    tools:context=".MainActivity" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/SearchGorod"
            android:layout_width="294dp"
            android:layout_height="51dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:hint="Название города"
            android:inputType="textPersonName"
            android:textColor="#282E2E"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textGorod"
            android:layout_width="178dp"
            android:layout_height="136dp"
            android:layout_below="@+id/SearchGorod"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="#FDFFFE"
            android:textSize="96sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.536"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.146" />

        <ImageButton
            android:id="@+id/poiskButton"
            android:layout_width="59dp"
            android:layout_height="58dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="26dp"
            android:backgroundTint="#FABF87"
            android:contentDescription="@string/Vvedite_Text"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/SearchGorod"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/poisk" />

        <TextView
            android:id="@+id/city_name"
            android:layout_width="178dp"
            android:layout_height="53dp"
            android:layout_marginTop="188dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>